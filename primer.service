[Unit]
Description=Primer AI Kit Service
Wants=network-online.target
After=network-online.target ollama.service

[Service]
Type=simple
User=root
Group=root
WorkingDirectory=__PROJECT_PATH__
ExecStart= --preserv-env __PROJECT_PATH__/venv/bin/python __PROJECT_PATH__/src/primer.py
Restart=on-failure
RestartSec=1

[Install]
WantedBy=multi-user.target